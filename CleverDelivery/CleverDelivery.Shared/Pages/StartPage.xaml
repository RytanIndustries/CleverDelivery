<?xml version="1.0" encoding="utf-8" ?>
<core:CorePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:Xamarin.Forms.Core;assembly=CleverDelivery"
             ViewModel="CleverDelivery.ViewModels.StartViewModel"
             x:Class="CleverDelivery.Pages.StartPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="1" Text="Basic Map" Command="{Binding  BasicMapCommand}" HorizontalOptions="Center" />
            <Button Grid.Row="1" Grid.Column="1" Text="Current Location" Command="{Binding  CurrentLocationCommand}" HorizontalOptions="Center" />
            <Button Grid.Row="2" Grid.Column="1" Text="Address Locator Map" Command="{Binding  AddressLocatorCommand}" HorizontalOptions="Center" />
            <Button Grid.Row="3" Grid.Column="1" Text="Routing Map" Command="{Binding  RoutingCommand}" HorizontalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</core:CorePage>